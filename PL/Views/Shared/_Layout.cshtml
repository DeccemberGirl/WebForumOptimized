            <div class="container">
                <p style="font-family: 'Source Sans Pro', sans-serif; padding-top: 10px; font-size: 18px;">@Html.ActionLink("Dev Forum", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</p>
